<resources>
    <style name="calculator">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#373A37</item>
    </style>
    <style name="whiteButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">27sp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:background">@drawable/whiteroundedbutton</item>

    </style>
    <style name="blueButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:backgroundTint">@color/buttonTextColor</item>
        <item name="android:elevation">10dp</item>
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">27sp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:background">@drawable/blueroundedbutton</item>
    </style>

 </resources>